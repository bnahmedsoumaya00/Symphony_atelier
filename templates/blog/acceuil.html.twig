{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
                <tr>
                    {# <th>Article</th>
                    <th>Actions</th> #}
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        {# <td>{{ article }}</td> #}
                        <td>{{ article.nom }}</td>
                        <td>{{ article.prix }}</td>
                        <td>
                            <a href="/blog/{{ article.id }}" class="btn btn-dark">Détails</a>
                            <a href="/blog/edit/{{ article.id }}" class="btn btn-dark">Modifier</a>
                            <a href="/blog/delete/{{ article.id }}" class="btn btn-danger" onclick="return confirm('Etes-vous sûr de supprimer cet article?');">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun articles</p>
    {% endif %}
{% endblock %}