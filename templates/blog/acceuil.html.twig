{% extends 'base.html.twig' %}

{% block title %}Liste des Articles – Soumaya{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold">Nos Articles</h1>
        <a href="{{ path('new_article') }}" class="btn btn-primary btn-lg">➕ Ajouter un article</a>
    </div>

    {% if articles|length > 0 %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for article in articles %}
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ article.nom }}</h5>
                        <p class="card-text fs-4 text-purple fw-bold">{{ article.prix }} DT</p>
                        <div class="mt-auto d-flex gap-2 flex-wrap">
                            <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-sm btn-outline-primary">👁️ Détails</a>
                            <a href="{{ path('edit_article', {'id': article.id}) }}" class="btn btn-sm btn-outline-warning">✏️ Modifier</a>
                            <form method="post" action="{{ path('delete_article', {'id': article.id}) }}" 
                                  onsubmit="return confirm('⚠️ Voulez-vous vraiment supprimer « {{ article.nom }} » ?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">🗑️ Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <h3 class="text-muted">📭 Aucun article trouvé</h3>
            <p class="lead">Commencez par en créer un !</p>
            <a href="{{ path('new_article') }}" class="btn btn-primary">Créer votre premier article</a>
        </div>
    {% endif %}
</div>
{% endblock %}