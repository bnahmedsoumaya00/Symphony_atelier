{% extends 'base.html.twig' %}

{% block title %}
    {% if form.vars.data.id %}Modifier « {{ form.vars.data.nom }} »{% else %}Ajouter un nouvel article{% endif %}
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        {% if form.vars.data.id %}
                            ✏️ Modifier l'article
                        {% else %}
                            ➕ Ajouter un nouvel article
                        {% endif %}
                    </h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom, {
                                'attr': {'class': 'form-control', 'placeholder': 'Ex: Smartphone...'}
                            }) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.prix, 'Prix (DT)') }}
                            {{ form_widget(form.prix, {
                                'attr': {
                                    'class': 'form-control',
                                    'type': 'number',
                                    'step': '0.01',
                                    'min': '0',
                                    'placeholder': 'Ex: 29.99'
                                }
                            }) }}
                            {{ form_errors(form.prix) }}
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                            <a href="{{ path('article_list') }}" class="btn btn-secondary">← Annuler</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}