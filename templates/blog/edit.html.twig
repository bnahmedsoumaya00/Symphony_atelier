{% extends 'base.html.twig' %}

{% block title %}Modifier Article{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Modifier l'article</h1>
        
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.nom, 'Nom de l\'article', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="mb-3">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                <a href="{{ path('article_list') }}" class="btn btn-secondary">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
